<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Slovo_Filter.LoginPage"
             xmlns:viewModels="clr-namespace:Slovo_Filter.ViewModel"
             x:DataType="viewModels:LoginViewModel"
             BackgroundColor="Black"
             NavigationPage.HasNavigationBar="False">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image Source="login_animation.gif"
               Grid.Column="1"
               Aspect="AspectFill"
               IsAnimationPlaying="True"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="FillAndExpand" />

        <StackLayout Grid.Column="0"
                     Margin="52, 76, 0, 0"
                     HorizontalOptions="Start"
                     VerticalOptions="Start">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" /> 
                    <RowDefinition Height="Auto" /> 
                    <RowDefinition Height="Auto" /> 
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0"
                       Text="Sign In to Slovo-Filter"
                       FontSize="{OnPlatform MacCatalyst='40', WinUI='40' }"
                       HorizontalOptions="Start"
                       TextColor="White"
                       Padding="3, 4, 3, 95 "
                       FontFamily="RobotoExtraBold"
                       />
                
                <Grid Grid.Row = "1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    
                    <Label 
                        Grid.Row = "0"
                        Text = "Email"
                        FontSize = "20"
                        HorizontalOptions="Start"
                        TextColor="White"
                        Padding="0,0,0, 10"
                        FontFamily="RobotoMedium"
                           />
                    <Entry Grid.Row = "1"
                           Placeholder="hello@company.com"
                           FontSize="20"
                           BackgroundColor="Black"
                           TextColor="White"
                           PlaceholderColor="Gray"
                           Margin="0,10"
                           Keyboard="Email"
                           HeightRequest="50"
                           WidthRequest="450"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="Center"
                           FontFamily="RobotoMedium"
                           x:Name = "EmailEntry"/>
                </Grid>
                <Grid Grid.Row = "2"
                      Padding="0, 10, 0, 10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    
                    <Label 
                        Grid.Row = "0"
                        Text = "Password"
                        FontSize = "20"
                        HorizontalOptions="Start"
                        TextColor="White"
                        FontAttributes="Bold"
                        Padding="0,0,0, 10"
                        FontFamily="RobotoMedium"
                    />
                    <Entry Grid.Row="1"
                           Placeholder="********"
                           FontSize="20"
                           BackgroundColor="Black"
                           TextColor="White"
                           PlaceholderColor="Gray"
                           Margin="0,10"
                           IsPassword="True"
                           HeightRequest="50"
                           WidthRequest="450"
                           HorizontalOptions="FillAndExpand"
                           VerticalOptions="Center"
                           FontFamily="RobotoMedium"
                           x:Name = "PasswordEntry"/>
                </Grid>
                

                <Grid Grid.Row = "3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0"
                            Text="Forgot Password?"
                            FontSize="15"
                            TextColor="#F7586C"
                            BackgroundColor="Transparent"
                            HorizontalOptions="Start"
                            VerticalOptions="Start"
                            FontFamily="RobotoBold"/>
                    
                    <Button Grid.Column="1"
                            Text="Sign In"
                            FontSize="15"
                            TextColor="White"
                            BackgroundColor="#6821EE"
                            HeightRequest="40"
                            WidthRequest="100"
                            HorizontalOptions="End"
                            VerticalOptions="End"
                            CornerRadius="13"
                            FontFamily="RobotoBold"
                            Clicked = "OnLoginButtonClicked"/>
                </Grid>
                
                <Grid Grid.Row = "4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width = "40*"></ColumnDefinition>
                        <ColumnDefinition Width = "20*"></ColumnDefinition>
                        <ColumnDefinition Width = "40*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    
                    <BoxView 
                        Grid.Column="0"
                        HeightRequest="1" 
                        HorizontalOptions="FillAndExpand" 
                        BackgroundColor="White" 
                        />
                    <Label 
                        Grid.Column="1"
                        Text = "OR"
                        FontSize = "18"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        FontFamily="RobotoMedium"
                        />
                    <BoxView 
                        Grid.Column="2"
                        HeightRequest="1" 
                        HorizontalOptions="FillAndExpand" 
                        BackgroundColor="White" 
                        Margin="0,34"
                    />
                </Grid>
                <Grid Grid.Row = "5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label
                        Text = "You don't have an account?"
                        Margin = "0, 30, 0, 0"
                        TextColor="#7A7A7A"
                        FontFamily="RobotoRegular"
                        FontSize = "17"
                        HorizontalOptions="Center"
                        ></Label>
                    <Button Grid.Row = "1"
                            BackgroundColor="Transparent"
                        Text = "Continue with email"
                        Margin="0, 4, 0, 0"
                        TextColor="#F7586C"
                        FontFamily="RobotoBold"
                        FontSize = "16"
                        HorizontalOptions="Center"
                            Command="{Binding NavigateToRegisterCommand}"
                        />
                    
                    
                    <!--TODO- oAuth button here -->
                    
                </Grid>
                <Grid Grid.Row = "6">
                    <!-- TODO- TEXT PLEASEEEEEEEEE -->
                </Grid>
                </Grid>
            
        </StackLayout>
    </Grid>
</ContentPage>
