<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Slovo_Filter.MainApp"
             xmlns:viewModels="clr-namespace:Slovo_Filter.ViewModel"
             xmlns:models1="clr-namespace:Slovo_Filter_DAL.Models;assembly=Slovo-Filter-DAL"
             xmlns:converters="clr-namespace:Slovo_Filter.Converters"
             xmlns:services="clr-namespace:Slovo_Filter_BLL.Services;assembly=Slovo-Filter-DAL"
             xmlns:global="clr-namespace:"
             x:DataType="viewModels:MainAppViewModel"
             BackgroundColor="#121212"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Resources>
        <ResourceDictionary>
                <converters:BoolToAlignmentConverter x:Key="BoolToAlignmentConverter" />
                <converters:AiScoreToColorConverter x:Key="AiScoreToColorConverter" />
            </ResourceDictionary>
    </ContentPage.Resources>

    <Grid ColumnDefinitions="2*, 5*"> 
        <!-- Left Section (User List) -->
        <VerticalStackLayout Padding="15" BackgroundColor="#1E1E1E">
            
            <!-- Current User Info -->
            <HorizontalStackLayout Spacing="10" Padding="5">
                <Image Source="user_pic.png" WidthRequest="40" HeightRequest="40" />
                <VerticalStackLayout>
                    <Label Text="{Binding CurrentUser.FirstName}" FontSize="Medium" TextColor="White" FontAttributes="Bold"/>
                    <Label Text="{Binding CurrentUser.LastName}" FontSize="Small" TextColor="Gray"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="10,5"/>

            <!-- User List -->
            <Label Text="Select a User" FontSize="Medium" FontAttributes="Bold" TextColor="Aqua"/>
            <Picker ItemsSource="{Binding Users}" 
                    SelectedItem="{Binding SelectedUser, Mode=TwoWay}" 
                    ItemDisplayBinding="{Binding FirstName}"
                    />

            <ListView ItemsSource="{Binding Users}" HeightRequest="400" BackgroundColor="#1E1E1E">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="services:User">
                        <ViewCell>
                            <HorizontalStackLayout Padding="5" Spacing="10">
                                <Image Source="user_pic.png" WidthRequest="30" HeightRequest="30"/>
                                <Label Text="{Binding FirstName}" TextColor="White" />
                            </HorizontalStackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </VerticalStackLayout>

        <!-- Right Section (Messages & Chat) -->
        <VerticalStackLayout Padding="15" BackgroundColor="#121212" Grid.Column="1">

            <!-- Selected User Info (Top) -->
            <HorizontalStackLayout Spacing="10" Padding="5">
                <Image Source="user_pic.png" WidthRequest="40" HeightRequest="40" />
                <VerticalStackLayout>
                    <Label Text="{Binding SelectedUser.FirstName}" FontSize="Medium" TextColor="White" FontAttributes="Bold"/>
                    <Label Text="{Binding SelectedUser.LastName}" FontSize="Small" TextColor="White "/>
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <BoxView HeightRequest="1" BackgroundColor="Gray" Margin="10,5"/>

            <!-- Messages List -->
            <ListView ItemsSource="{Binding MessageHistory}" 
                       BackgroundColor="#121212" 
                       HasUnevenRows="True" 
                       HeightRequest="1250">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models1:Message">
                        <ViewCell>
                            <Frame Padding="10" 
                                   CornerRadius="10"
                                   BackgroundColor="{Binding AiScore, Converter={StaticResource AiScoreToColorConverter}}"
                                   HasShadow="False"
                                   Margin="5"
                                   MaximumWidthRequest="250"
                                   HorizontalOptions="{Binding IsFromCurrentUser, Converter={StaticResource BoolToAlignmentConverter}}">

                                <StackLayout>
                                    <Label Text="{Binding Content}" TextColor="White" LineBreakMode="WordWrap"/>
                                    <Label Text="{Binding Date, StringFormat='{0:g}'}" FontSize="Small" TextColor="Gray"/>
                                </StackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>



            <!-- Message Input -->
            <Frame Padding="5"
                   CornerRadius="25"
                   BackgroundColor="#1E1E1E"
                   Margin="10"
                   HasShadow="True">
                <HorizontalStackLayout Spacing="5" Padding="5">
                    <Entry Text="{Binding CurrentMessage}" 
                           Placeholder="Type a message..." 
                           HorizontalOptions="FillAndExpand"
                           BackgroundColor="Transparent"
                           TextColor="White"
                           FontSize="Medium"
                           Margin="10,0"/>
                    <Button Text="âž¤" 
                            Command="{Binding SendMessageCommand}" 
                            BackgroundColor="Aqua" 
                            TextColor="Black"
                            FontSize="Large"
                            WidthRequest="50"
                            HeightRequest="50"
                            CornerRadius="25"/>
                </HorizontalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
